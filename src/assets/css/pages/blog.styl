.post 
    & h2
        margin-top 30px
        font-size 32px
        line-height 1.3
        color $color-text-article
        margin-bottom 10px
        & a
            color inherit
        .tags
            color $color-text-additional
            font-size 16px
            display inline
            font-style italic
            & a
                color inherit
    & .info time
        font-size 16px
        color $color-text-additional 
    & img
        max-width 100%
.comments 
    margin-top 20px
noscript.disqus
    font-size 16px
    color $color-text-additional
    font-style italic
    padding-top 20px
    display inline-block
.tagscloud 
    font-size 20px
    & sup
        padding 0 5px
        font-size 14px
        font-style italic
        color $color-text-base